colorscheme elflord

" Indent automatically depending on filetype
filetype indent on 

" Set command window height to 2 lines
set cmdheight=2

" Turn on numbering
set number

" Highlight search
set hls

" Set syntax on 
syntax on 

" Indentation Stuff
set shiftwidth=4
set softtabstop=4

" Case insensitive search, except for capital letters
set ignorecase
set smartcase

set backspace=indent,eol,start

noremap <C-z> :sh<cr>
